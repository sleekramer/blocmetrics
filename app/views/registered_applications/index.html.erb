<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="page-header">
        <h1>
          Registered Applications
          <%= link_to "Register New App", new_user_registered_application_path(current_user), class:'btn btn-success pull-right' %>
        </h1>
      </div>
      <% @registered_applications.each do |registered_application| %>
        <%= render registered_application %>
      <% end %>
    </div>
    <div class="col-md-4">
      <div class="page-header text-right">
        <h3><span class="glyphicon glyphicon-user"></span> <%= @user.username %></h3>
      </div>
    </div>
  </div>
</div>
